{
    "compilerOptions": {
    "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        
        "paths": {
            "@/*": ["./src/*"]
        },
        "typeRoots": ["./src/types", "./node_modules/@types"]
},

    "include": [
        "src/**/*.ts",
        "custom.d.ts"
],
    "exclude": ["node_modules","**/*.spec.ts"],
    "files":[
        "./src/types/types.d.ts",
        "custom.d.ts"

    ]
}
